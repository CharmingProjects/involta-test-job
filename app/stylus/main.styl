body
	font-family: 'Roboto', sans-serif;
.main-wrapper
	background url(../img/bg-compressed.jpg)
	background-position center center
	background-size cover
	display -webkit-flex
	display -moz-flex
	display -ms-flex
	display -o-flex
	display flex
	min-height 100vh
	width 100%
	.login-form-wrapper
		margin auto
		width 340px
		height 387px
		border-radius: 12px;
		background-color: #ffffff;
		box-shadow: 0 2px 30px 0 rgba(38, 38, 38, 0.5);
		.logo
			text-align center
			margin-top 45px
.login-form
	position relative
	&__item
		width 260px
		margin auto
		position relative
		margin-bottom 28px
		margin-top 24px
	input
		width 100%
		height 35px
		border 0
		border-bottom 1px solid #d3d7db
		display block
		margin auto
	label
		display block
		position absolute
		font-size: 14px;
		text-align: left;
		color: #8b9399;
		bottom 8px
	button
		width: 56px;
		height: 56px;
		position absolute
		right -28px
		bottom 6px
		border-radius 50%
		background-color: #efefef;
		box-shadow: 0 2px 5px 0 rgba(0, 0, 0, 0.26), 0 2px 10px 0 rgba(0, 0, 0, 0.16);
		&:hover
			background-color #00E676
		img
			display block
			margin auto
.bottom-links
	display -webkit-flex
	display -moz-flex
	display -ms-flex
	display -o-flex
	display flex
	justify-content: space-between;
	font-size: 12px;
	max-width: 260px;
	margin: auto;
	a
		color #9b9b9b
		&:hover
			color #00a9c0
.icon
	display: inline-block;
	color: #444444;
	width: 1em;
	height: 1em;
	fill: #000000;


		
		