//- Head tags generating

mixin headTags(tag)
	meta(charset=tag.charset)
	title= tag.title
	if tag.viewport
		meta(name="viewport" content="width=device-width, initial-scale=1")
	meta(name="description" content=tag.description)
	meta(name="keywords" content=tag.keywords)
	meta(name="author" content=tag.author)
	link(rel="stylesheet" href=`/dist/css/${tag.mainCSSname}.css`)
	if tag.jQueryCDN
		script(src=`https://code.jquery.com/jquery-${tag.jQueryCDNv}.js`)
	if tag.Bootstrap4CDN
		link(rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.0.0-alpha.6/css/bootstrap-grid.min.css")
	if tag.Bootstrap3CDN
		link(rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous")
	if tag.addCSSnames
		each css in tag.addCSSnames
			link(rel="stylesheet" href=`/dist/css/${css}.css`)
	script(src=`/dist/js/${tag.mainJSname}.js`)
	if tag.addJSnames
		each js in tag.addJSnames
			script(src=`/dist/js/${js}.js`)

mixin formBtnGroup(formName) 
	button(class=`${formName}__form-submit ripple` onclick="return false") Сохранить
	button(class=`${formName}__form-decline ripple` onclick="return false") Отменить

mixin addExtraMenu
	.profile-settings-menu
		.profile-settings-menu__wrapper
			ul.profile-settings-menu__list
				li.profile-settings-menu__list-item
					a.profile-settings-menu__link(href="#") Изменить
				li.profile-settings-menu__list-item
					a.profile-settings-menu__link(href="#") Добавить
				li.profile-settings-menu__list-item 
					a.profile-settings-menu__link(href="#") Удалить
