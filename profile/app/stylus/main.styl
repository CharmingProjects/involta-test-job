a,
a:hover
	text-decoration none !important
html
	min-height 100vh
	height auto
body
	height inherit
	font-family Roboto, "Hevetica" !important
//Google ripple effect
.ripple
	position relative
	overflow hidden
.ripple .rippleElem 
	position absolute
	display block
	-webkit-border-radius 100%
	border-radius 100%
	width 0
	height 0
	background rgba(255,255,255, .95)
		
.container-fluid
	background $backside-gray
	width 100%
	height inherit
.header
	&__top-line
		background $top-line-blue
		height 110px
		padding 36px 48px 0 0
		box-sizing border-box
		color white
		.bars-ico
			display none
		.user-profile
			display -webkit-flex
			display -moz-flex
			display -ms-flex
			display -o-flex
			display flex
			justify-content end
		.user-emails,
		.user-notifications
			height inherit
			display -webkit-flex
			display -moz-flex
			display -ms-flex
			display -o-flex
			display flex
			align-items center
			margin-right 30px
			&__wrapper
				width 25px
				height 25px
				position relative
				cursor pointer
			&__amount
				border-radius 50%
				font-size 12px
				font-weight 500
				height 16px
				width 16px
				color white
				position absolute
				top -5px
				right -3px
				background $amount-red
				display -webkit-flex
				display -moz-flex
				display -ms-flex
				display -o-flex
				display flex
				justify-content center
				align-items center
		.user-avatar
			text-align right
	.user-profile
		height 54px
	&__nav-line
		background $nav-line-blue
		height 50px
.nav
	display -webkit-flex
	display -moz-flex
	display -ms-flex
	display -o-flex
	display flex
	height inherit
	position relative
	&__links-list
		height inherit
		display -webkit-flex
		display -moz-flex
		display -ms-flex
		display -o-flex
		display flex
		align-items center
	&__list-item
		height inherit
		&:first-of-type
			padding-left 36px
	&__link
		color $nav-link-blue
		display inline-block
		height inherit
		padding 0 18px
		display -webkit-flex
		display -moz-flex
		display -ms-flex
		display -o-flex
		display flex
		&:hover
			color white
		span
			margin auto
			font-size 14px
			text-transform uppercase
	.current
		color white
	.magic-line
		height 3px
		background white
		position: absolute;
		bottom: 0;
		left: 0;
		box-shadow: 0 1px 4px 0 rgba(0, 0, 0, 0.5);
.container
	background white
	margin-top 53px
	&__head
		background $backside-gray
		h1
			font-size 16px
			text-transform uppercase
			color $head-gray
			padding-left 37px
			padding-bottom 18px
			margin 0
			font-weight 400
	.main-content
		box-shadow 0 0 20px 2px rgba(0, 0, 0, 0.1)
.tab-nav
	height 70px
	text-align center
	display -webkit-flex
	display -moz-flex
	display -ms-flex
	display -o-flex
	display flex
	border-bottom 3px solid $border-tab-gray
	transition all 0.2s ease-in-out
	&:hover
		border-bottom 3px solid $border-tab-blue
	&__link
		height inherit
		display -webkit-flex
		display -moz-flex
		display -ms-flex
		display -o-flex
		display flex
		width 100%
		color black
		transition all 0.2s ease-in-out
		font-size 16px
		justify-content center
		align-items center
		span
			text-transform uppercase
			margin-top 8px
			color $tab-nav-gray
.tabs-nav
	.active
		border-bottom 3px solid $border-tab-blue
.left-column,
.user-profile
	display -webkit-flex
	display -moz-flex
	display -ms-flex
	display -o-flex
	display flex
	align-items stretch
.left-column
	&__wrapper
		background $left-column-blue
		margin 30px 45px
		overflow auto
		.avatar-big
			margin 20px
			position relative
			&__img
				width 100%
			&__change
				height 32px
				width 100%
				background black
				opacity 0.7
				color white
				font-size 10px
				display -webkit-flex
				display -moz-flex
				display -ms-flex
				display -o-flex
				display flex
				justify-content center
				align-items center
				border-radius 4px
				position absolute
				cursor pointer
				.camera-ico
					margin-right 3px
					height 21px
.notifications
	margin 46px 20px
	&__item
		background $notify-yelow
		border-radius 2px
		padding 22px 21px
		position relative
		box-shadow: 0 0 8px 0 rgba(0, 0, 0, 0.12);
		border-style: solid;
		border-width: 1px;
		border-image-source: linear-gradient(to bottom, rgba(0, 0, 0, 0), rgba(0, 0, 0, 0.06));
		border-image-slice: 1;
		box-sizing border-box
		margin-bottom 20px
		.cross-ico
			position absolute
			right 9px
			top 9px
			cursor pointer
			border-radius 50%
			width 16px
			height 16px
			background white
			display -webkit-flex
			display -moz-flex
			display -ms-flex
			display -o-flex
			display flex
			justify-content center
			align-items center
			color $cross-ico-gray
	&__text
		font-size 14px
		line-height 20px
	&__head
		font-size 16px
		font-weight 900
		margin-bottom 6px
.profile-info
	padding 40px 62px 40px 18px
	.more-vert-ico
		position absolute
		border-radius 50%
		right -1px
		top -1px
		color $more-btn-gray 
		cursor pointer
		&__wrapper
			width 32px
			height 32px
			display -webkit-flex
			display -moz-flex
			display -ms-flex
			display -o-flex
			display flex
			justify-content center
			align-items center
			svg
				z-index 0
	.more-vert-ico-mouseover
		background $more-btn-wrapper-gray
	.profile-settings-menu
		display none
		position absolute
		z-index 5
		right 0
		top 32px
		width 191px
		border-radius 2px
		background-color #ffffff
		box-shadow 0 0 8px 0 rgba(0, 0, 0, 0.12), 0 0 2px 0 rgba(0, 0, 0, 0.12)
		&__list
			padding 18px 0
		&__list-item
			padding 5px 0 
			text-align center
		&__list-
		&__link
			color $tab-nav-gray
			text-transform uppercase
			font-size 14px
			font-weight 500
			&:hover
				color $border-tab-blue
			
.about-user
	margin-bottom 40px
.about-user,
.main-info,
.student-profile,
.user-contacts
	margin-bottom 58px
	&__content	
		padding-top 12px
		padding-right 110px
.about-user,
.main-info,
.student-profile,
.user-contacts
	&__head
		display -webkit-flex
		display -moz-flex
		display -ms-flex
		display -o-flex
		display flex
		position relative
	&__head-text
		h2
			font-size 24px
			font-weight 500
			text-transform uppercase
			font-family Roboto
	&__form-wrapper
		max-width 497px
		width 100%
	&__form-row
		display -webkit-flex
		display -moz-flex
		display -ms-flex
		display -o-flex
		display flex
		justify-content space-between
		align-items: center;
		padding: 7px 4px;
		margin-bottom: 4px;
		position relative
	&__form-label
		display block
	&__form-input,
	&__form-select
		display block
		border none
		outline none
		height 40px
		box-sizing border-box
		border-bottom 1px solid $input-border-gray
		width 327px
		margin-right -6px
		&:focus
			border-bottom 2px solid $input-border-blue
	&__form-select
		-webkit-appearance none
		-moz-appearance none
		text-indent 1px
		text-overflow ''
		outline 0
		color $select-black
		cursor pointer
		background transparent
		display block
		position relative
	&__form-btn-group
		margin-top 10px
		display -webkit-flex
		display -moz-flex
		display -ms-flex
		display -o-flex
		display flex
		justify-content flex-end
	&__form-submit,
	&__form-decline
		border-radius 2px
		width 126px
		height 36px
		text-transform uppercase
		font-size 14px
		font-weight 500
	&__form-submit
		background $submit-btn-green
		color white
		box-shadow: 0 0 8px 0 rgba(0, 0, 0, 0.12);
		border-style: solid;
		border-width: 1px;
		border-image-source: linear-gradient(to bottom, rgba(0, 0, 0, 0), rgba(0, 0, 0, 0.06));
		border-image-slice: 1;
		margin-right 7px
		.rippleElem 
			background rgba(255,255,255, .4)
	&__form-decline
		color $decline-btn-text-gray
		background transparent
		margin-right 62px
		.rippleElem 
			background rgba(0,0,0, .2)
.select-wrapper
	&:after
		content " "
		width 0px
		height 0px
		border-bottom 5px solid #999999
		border-right 5px solid #999999
		border-top 5px solid transparent
		border-left 5px solid transparent
		display block
		cursor pointer
		position absolute
		right -2px
		top 28px
		z-index 2
	select::-ms-expand
		display none
.head-ico-item
	width 22px
	height 22px
	margin-right 14px